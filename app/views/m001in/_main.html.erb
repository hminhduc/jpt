<div class="row">
	<div class="col-md-4 col-md-offset-2">
	    <button type="button" class="btn btn-primary" id="add">　追　加　</button> 
			<input type="hidden" name="cell_input" />
	    <button type="button" class="btn btn-primary">　削　除　</button> 
		
	</div>
</div>
<table id="m001in_table" class="table table-striped table-bordered table-hover" cellspacing="0">
	<!-- <table id="example" class="display" cellspacing="0"> -->
	    <thead>
	        <tr>
	            <th>表示順</th>
	            <th>投入品目</th>
	            <th>単位</th>
	            <th>
		            <div style="margin-bottom: 2px">有効率</div>
		            ロス率
	            </th>
	            <th>
		            <div style="margin-bottom: 2px">投入数量</div>
		            ロス工程数量
	            </th>
	            <th>
		            <div style="margin-bottom: 2px">実績計上</div>
		            入力手番製品起算
	            </th>
	            <th>
		            <div style="margin-bottom: 2px">作業指示書</div>
		            作業指示書名称
	            </th>
	            <th>
		            <div style="margin-bottom: 2px">準備区分</div>
		            準備手番
	            </th>
	            <th>
		            <div style="margin-bottom: 2px">計量区分</div>
		            計量手番
	            </th>
	            <th>
		            <div style="margin-bottom: 2px">投入品生産工場組織</div>
		            自ライン　投入品生産ライン
	            </th>
	            <th>
		            <div style="margin-bottom: 2px">ライン品目別指示書備考</div>
		            小分計量備考
	            </th>
	            <th>
		            <div style="margin-bottom: 2px">作業別指示書備考</div>
		            重量換算値(配合率)　　　　入力手番
	            </th>
	        </tr>
	    </thead>

	    <tbody>
	    <% @records.each do |model| %>
	        <tr>
	            <td>
			            <%= model['表示順序'] %>
	            </td>
	            <td>
			            <%= model['投入品目コード'] %> <%= model['投入品目略名称'] %>
	            </td>
	            <td>
			            <%= model['単位名称'] %>
	            </td>
	            <td>
			            <div><%= model['有効率'] %> %</div>
			            <%= model['ロス率'] %> %
	            </td>
	            <td>
			            <div><%= model['投入数量'] %> <%= model['単位名称'] %></div>
			            <%= model['ロス固定数量'] %> <%= model['単位名称'] %>
	            </td>
	            <td>
			            <div><%= model['実績計上区分'] %></div>
			            <%= model['入庫手番製品起算'] %> 日
	            </td>
	            <td>
			            <div><%= model['投入記載区分'] %></div>
			            <%= model['作業指示書名称'] %>
	            </td>
	            <td>
			            <div><%= model['準備区分２'] %></div>
			            <%= model['投入準備手番２'] %> 日
	            </td>
	            <td>
			            <div><%= model['準備区分'] %></div>
			            <%= model['投入準備手番'] %> 日
	            </td>
	            <td>
			            <div><%= model['投入工場組織コード'] %> <%= model['投入工場組織名称'] %></div>
			            　<%= model['投入品生産自ライン区分'] %>　　　　<%= model['投入ラインコード'] %> <%= model['投入ライン名称'] %>
	            </td>
	            <td>
			            <div><%= model['構成明細備考'] %></div>
			            <%= model['投入準備備考'] %>
	            </td>
	            <td>
			            <div><%= model['作業指示書備考'] %></div>
			            <%= model['重量換算値'] %>　<%= model['重量単位'] %>　（66.67%）　<%= model['入庫手番'] %> 日
	            </td>
	        </tr>
	        <% end %>
	    </tbody>
</table>	