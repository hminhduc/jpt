<p id="notice"><%= notice %></p>

<%= form_for(:user, url: login_path, html:{class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <div class="field">
      <%= f.label :社員番号, class: 'col-sm-2 control-label' %>
      <div class="col-sm-2">
        <%= f.text_field :担当者コード, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <%= f.label :パスワード, class: 'col-sm-2 control-label' %>
      <div class="col-sm-2">
        <%= f.password_field :パスワード, class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <div class="field">
      <div class="col-sm-1 col-sm-offset-2">
        <div class="actions">
          <%= f.submit 'LOGIN', class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  </div>

<% end %>
