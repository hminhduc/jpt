<%= form_for(@user, html:{class: 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <%= f.label :社員番号, class: 'col-sm-2 control-label' %>
    <div class="col-sm-1">
      <%= f.text_field :担当者コード, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :担当者名称, class: 'col-sm-2 control-label' %>
    <div class="col-sm-1">
      <%= f.text_field :担当者名称, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :パスワード, class: 'col-sm-2 control-label' %>
    <div class="col-sm-1">
      <%= f.password_field :パスワード, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-2 col-sm-offset-2">
      <div class="actions">
        <%= f.submit '　変　更　', class: 'btn btn-primary' %>
      </div>
    </div>
  </div>
<% end %>
