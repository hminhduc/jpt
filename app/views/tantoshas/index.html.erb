<%= javascript_include_tag "lib/tantoshas.js" %>

<h1>担当者一覧</h1>

<table id="tantoshas" class="table table-striped table-bordered table-hover" cellspacing="0">

  <thead>
    <tr>
      <th>担当者コード</th>
      <th>担当者名称</th>
      <th>パスワード</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @tantoshas.each do |tantosha| %>
      <tr>
        <td><%= tantosha.tanto_code %></td>
        <td><%= tantosha.tanto_name %></td>
        <td><%= tantosha.password %></td>
        <td><%= link_to '詳 細', tantosha %></td>
        <td><%= link_to '編 集', edit_tantosha_path(tantosha) %></td>
        <td><%= link_to '削 除', tantosha, method: :delete, data: { confirm: '行削除を行います。宜しいでしょうか。'} %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新 規', new_tantosha_path %>
