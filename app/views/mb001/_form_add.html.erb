<form class="form-horizontal" action="add" method="post" role="form">
  <div class="form-group">
    <label for="inputCode" class="col-sm-2 control-label">担当グループコード</label>
    <div class="col-sm-3">
      <input type="text_field" class="form-control" id="group_id" name="group_id" placeholder="担当グループコード">
    </div>
  </div>
  <div class="form-group">
    <label for="inputName" class="col-sm-2 control-label">担当グループ名称</label>
    <div class="col-sm-3">
      <input type="text_field" class="form-control" id="group_name" name="group_name" placeholder="担当グループ名称">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
    <%= @message %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">更　新</button>
    </div>
  </div>
</form>